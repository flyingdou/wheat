page{
  width: 100%;
  height: 100%;
  background-color: #E1E4E6;
}

.content{
   width: 100%;
   height: auto;
   background-color: white;
   margin-top: 20rpx;
}

.course{
   width: 92%;
   height: auto;
   margin: 0 auto;
   border-bottom: solid 2rpx #DBDBDB;
   padding: 26rpx 0;
    overflow: hidden; /* 清除子元素的浮动 */ 
}

 .course:last-child{
   border: none;
} 

.courseTitle{
   float: left;
   font-size: 28rpx;
   color: black;
   padding-left: 16rpx;
}

.courseValue{
   float: right;
   font-size: 28rpx;
   color: black;
}

.courseAddress {
   color: #808080; 
   text-align: right;
} 
.douInput {
   text-align: right;
}

.courseInput{
   width: 60%;
}

.footerButton{
   position: fixed;
   bottom: 0;
   left: 0;
   width: 100%;
   height: auto;
   background-color: #FB8C00;
   color: white;
   font-size: 32rpx;
   text-align: center;
   padding: 26rpx 0;
}

.value{
  font-size: 14px;
  color: #A9A9A9;
}

