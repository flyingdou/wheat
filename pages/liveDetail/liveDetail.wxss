page{
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
  background-color: #F0F0F2;
}

image{
  width: 100%;
  height: 100%;
}

/* 直播播放组件 */
.live-play{
  position: relative;
  width: 100%;
  height: 450rpx;
}

.operation-background{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: transparent;
}

.operation-block{
  position: relative;
  width: 100%;
  height: 100%;
  background-color: transparent;
}

.operation{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  overflow: hidden;
  background-color: rgba(0, 0, 0, 0.5);
}

.fullscreen-icon{
  float: right;
  margin-top: 10rpx;
  margin-right: 20rpx;
  width: 60rpx;
  height: 60rpx;
}

.isAll{
  height: 100%;
}

.live-play-image{
  width: 100%;
  height: 450rpx;
}

/* 滑块部分 */
.swiper{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}

.swiper-title{
  display: flex;
  justify-content: space-between;
  background-color: #F0F0F2;
}

.swiper-title-item{
  width: 50%;
  height: 80rpx;
  text-align: center;
  line-height: 78rpx;
  font-size: 32rpx;
  color: #BBB;
}

.swiper-item{
  position: relative;
  background-color: #FFF;
}

.swiper-active{
  color: #000;
  border-bottom: 2rpx solid #FB8C00;
}

/* 选项卡一 */
.live-notice{
  padding: 20rpx;
}

.live-notice-title{
  display: flex;
  justify-content: space-between;
  font-size: 32rpx;
}

.totalOnline{
  font-size: 28rpx;
  color: #BBB;
}

.live-notice-content{
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #BBB;
}

.live-chat{
  padding: 0 20rpx;
  overflow: scroll;
}

.live-chat:last-child{
  padding-bottom: 0;
}

.live-chat-item{
  padding-bottom: 20rpx;
  font-size: 24rpx;
}

.send-chat{
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 94%;
  height: 80rpx;
  padding: 0 3%;
  background-color: #FFF;
  border-top: 1px solid #F0F0F2;
}

.chat-input{
  width: 90%;
}

.chat-input > input{
  font-size: 28rpx;
  color: #3399FF;
}

.send-chat-button{
  width: 10%;
  height: 1.4rem;
  text-align: center;
  line-height: 1.4rem;
  font-size: 28rpx;
  color: #3399FF;
}

/* 选项卡二 */
.user-info{
  padding: 20rpx;
  overflow: hidden;
  border: 1px solid #F0F0F2;
}

.user-image{
  float: left;
  width: 80rpx;
  height: 80rpx;
}

.user-image > image{
  border-radius: 50%;
}

.user-other{
  float: left;
  margin-left: 20rpx;
}

.user-name{
  font-size: 32rpx;
}

.live-start-time{
  font-size: 28rpx;
  color: #BBB;
}

.anchor-notice{
  padding: 0 20rpx;
  margin-bottom: 88rpx;
}

.anchor-notice-title{
  margin: 20rpx 0;
  max-height: 400rpx;
  overflow: scroll;
  font-size: 28rpx;
}

.anchor-notice-content{
  font-size: 28rpx;
  color: #BBB;
}

.start-live{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 88rpx;
  text-align: center;
  line-height: 88rpx;
  font-size: 28rpx;
  color: #FFF;
  background-color: #FB8C00;
}





